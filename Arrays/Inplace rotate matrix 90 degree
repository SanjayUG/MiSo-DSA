import java.util.* ;
import java.io.*; 
public class Solution {
	
	public static void inplaceRotate(int[][] arr, int n) {
		//Transposeing the matrix
		for(int i=0; i<n; i++) {
			for(int j=i+1; j<n; j++) {
				int temp = arr[i][j];
				arr[i][j] = arr[j][i];
				arr[j][i] = temp; 
			}
		}

		//Reversing the column 
		for(int i=0; i<n/2; i++) {
			for(int j=0; j<n; j++) {
				int temp = arr[i][j];
				arr[i][j] = arr[n - i - 1][j];
				arr[n- i - 1][j] = temp;
			}
		}

	}

}
